<%- include ('partials/header.ejs'); -%>
<% if (message != '') { %>
  <p class="text-center text-danger"><%= message %></p>
<% } %>
<div id="mainCarousel" class="carousel slide" data-ride="carousel" data-interval="7777">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-50 mx-auto" src="neature1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-50 mx-auto" src="neature2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-50 mx-auto" src="neature3.jpg" alt="Third slide">
    </div>
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="card-group">
      <div class="card">
        <img class="card-img-top" src="Upload Icon.jpg" style="width: 100%; vertical-align: middle;" alt="Upload Image">
        <div class="card-body">
          <h5 class="card-title">Image Upload</h5>
          <p class="card-text">Upload an image that can be shared throughout the CC community. </p>
          <a href="/upload" class="btn btn-primary">Upload</a>
        </div>
      </div>
      <div class="card">
        <img class="card-img-top" src="Collection.jpg" style="width: 100%; vertical-align: middle;" alt="View Collection">
        <div class="card-body">
          <h5 class="card-title">View Collection</h5>
          <p class="card-text">Browse through the images that the CC community has uploaded.</p>
          <a href="/collection" class="btn btn-primary">Collection</a>
        </div>
      </div>
      <div class="card">
        <img class="card-img-top" src="Create Account Icon.jpg" style="width: 100%; vertical-align: middle;" alt="Create Account Icon">
        <div class="card-body">
          <h5 class="card-title">Create an Account</h5>
          <p class="card-text">Sign up for an account in order to upload images and save them to your personal library.</p>
          <!-- <a href="#" class="btn btn-primary">Create Account</a> -->
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ('partials/footer.ejs'); -%>
